{
  "name": "hverermadurinn",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply hverermadurinn --local",
    "db:migrate:remote": "wrangler d1 migrations apply hverermadurinn --remote"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.6",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-cloudflare": "^5.0.1",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.1.0",
    "drizzle-kit": "^0.31.4",
    "svelte": "^5.0.0",
    "svelte-check": "^4.1.1",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "wrangler": "^4.50.0"
  }
}
